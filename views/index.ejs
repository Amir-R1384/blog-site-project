<body>
    <div class="container-xxl d-flex justify-content-around mt-3 gap-3" style="flex-wrap:wrap">
        <% blogs.forEach(blog=> { %>

            <div class="card  border-1 border-dark">
                <div class="card-body">
                    <h2 class=" h3 card-title"> <%= blog.title %>  </h2>
                    <p class="card-text"> <%= blog.description %>  </p>
                    <a href="/blog/view/<%= blog.id %>" class="btn btn-primary btn-sm">View </a>
                    <a href="/blog/edit/<%= blog.id %>" class="btn btn-secondary btn-sm">Edit </a>
                    <form action="/blog/<%= blog.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    
                </div>
            </div>

        <% }) %>
    </div>
</body>